{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*"],
  "exclude": ["test", "node_modules"]
}
